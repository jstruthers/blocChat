$red = #ff4530;

*
  box-sizing border-box
  
/******************************/
/*  HOME                      */
/******************************/
html
  background-color deepskyblue

.main-container
  position absolute
  top 0
  right 0
  bottom 0
  left 0

.dim
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  
  z-index 1

  background-color hsla(0, 0%, 0%, 65%)
  

#header
  font-size 2em
  border-bottom solid 3px purple

#main
  position relative
  width 800px
  margin 0 auto 0

.row
  display flex
  width 100%

.column
  display flex
  justify-content flex-start
  align-items flex-start
  align-content space-between
  flex-direction column

/******************************/
/*  MENU                      */
/******************************/

.menu
  width 300px
  padding 10px
  border-left 3px solid purple
  border-right 3px solid purple

.modal
  width 200px
  padding 20px

  position absolute
  left 0
  top 0
  z-index 2

  border 1px solid #ccc
  background white

.server-error
  color $red
  text-align center
  font-size 18px
  line-height 1.3em


/******************************/
/*  CHAT ROOM                 */
/******************************/

.chat-room
  border-right 3px solid purple
  width 500px
  padding 10px
  &-list
    width 66%
    margin 10px
  &-list-item
    padding 10px

    font-size 1.6em
    color purple
    &:hover
      cursor pointer
      color ghostwhite
      button
        visibility visible
        float right
    span
      float left
    div
      clear both
    button
      visibility hidden
  &-header
    width 200px
    border-bottom 2px solid purple
  &-title
    font-size 1.4em
  &-occupant-list
    height 0px
  &-message-box
    margin 15px
    width 440px
    height 300px
    border 1px solid purple
    border-radius 15px
  &-input-field
    padding 5px
  &-user-icon
    display inline-block
    font-size 1.5em
    width 25px
    height 25px
    
    text-align center
    border-radius 50%
    background-color purple
    color white
  &-username
    display inline-block
    margin-left 20px
    width 200px
    font-size 1.2em
    border-bottom 2px solid purple

/******************************/
/*  FORM                      */
/******************************/

.input-group.input-group
  width 100%
  position relative
  label
    display block
    height 17px
  input
    display block
    padding 5px
    width 100%

  .error
    position absolute
    background red
    padding 10px
    border-radius 5px
    color white
    left 100%
    margin-left 15px
    top 22px
    width 50%

/******************************/
/*  FORM                      */
/******************************/

.login
  margin 20px
  width 400px

/******************************/
/*  BUTTONS                   */
/******************************/

button[type="submit"]
  border-radius 5px
  border 1px solid $red
  margin-top 20px

  color $red
  outline 0
  font-size 12px
  padding 10px 0
  text-transform uppercase

  background white
  width 100%
  transition 0.2s
  &:hover
    color white
    background $red

.modal-btn
  border-radius 5px
  border 1px solid purple
  margin-top 20px

  color purple
  outline 0
  font-size 12px
  padding 10px
  text-transform uppercase

  background white
  transition 0.2s
  &:hover
    color white
    background purple

.close-btn
  display block
  position absolute
  
  border-radius 5px
  border 1px solid $red
  color $red
  outline 0
  background white
  width 2em
  top -20px
  left 198px
  transition 0.2s
  &:hover
    color white
    background $red