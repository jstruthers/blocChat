$red = #ff4530;

*
  box-sizing border-box

.main-container
  position absolute
  top 0
  right 0
  bottom 0
  left 0

.dim
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  
  z-index 1

  background-color hsla(0, 0%, 0%, 65%)
  

#header
  font-size 2em
  border-bottom solid 1px #ccc

.home
  width 400px
  margin 0 auto 0

  form
    width 100%

.modal
  width 200px
  padding 20px

  position absolute
  z-index 2

  border 1px solid #ccc
  background white

.intro
  text-align center
  font-size 18px
  line-height 1.3em

.server-error
  color $red
  text-align center
  font-size 18px
  line-height 1.3em

.notifier
  display flex
  justify-content center
  align-items center
  flex-direction column
  height 150px
  background-color beige

.row
  position relative

.input-group.input-group
  width 100%
  position relative
  label
    display block
    height 17px
  input
    display block
    padding 5px
    width 100%

  .error
    position absolute
    background red
    padding 10px
    border-radius 5px
    color white
    left 100%
    margin-left 15px
    top 22px
    width 50%

button[type="submit"]
  border-radius 5px
  border 1px solid $red
  margin-top 20px
  color $red
  outline 0
  font-size 12px
  padding 10px 0
  text-transform uppercase
  background white
  width 100%
  transition 0.2s
  &:hover
    color white
    background $red

.closeBtn
  display block
  position absolute
  
  border-radius 5px
  border 1px solid $red
  color $red
  outline 0
  background white
  width 2em
  top -20px
  left 198px
  transition 0.2s
  &:hover
    color white
    background $red