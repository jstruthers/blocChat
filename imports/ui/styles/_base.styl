$red = #ff4530;

*
  box-sizing border-box
  
/******************************/
/*  HEADER                    */
/******************************/

#header
  font-size 2em
  display flex
  min-width vw
  height 120px
  justify-content space-between

.logo
  max-width 100%
  margin-right 30px
  margin-top 30px
  height auto
  width auto\9 /* ie8 */

.user-profile-header
  margin-left 30px
  margin-top 30px
  padding-left 10px

  border-left 3px solid white

/******************************/
/*  HOME                      */
/******************************/
html
  margin 0
  padding 0
  font 1em 'Asap', sans-serif

  background-image url("/images/bg.png")
  background-size cover
  background-repeat no-repeat
  background-position left top
  background-attachment fixed

.main-container
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  
  color white

.modal
  width 200px
  padding 10px 0px

  position absolute
  z-index 2
  
  border-radius 10px 10px
  border 1px solid #ccc
  background white

  form
    display flex
    justify-content center
    flex-direction column
    margin 0px 20px

.dim
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  
  z-index 1

  background-color hsla(0, 0%, 0%, 65%)

#home
  position relative
  width 800px
  margin 50px auto
  border-radius 5px
  background-color hsla(0, 0%, 0%, 35%)

.row
  position relative
  display flex
  width 100%

.column
  display flex
  justify-content flex-start
  align-items flex-start
  align-content space-between
  flex-direction column

/******************************/
/*  MENU                      */
/******************************/

.menu
  padding 10px

.server-error
  color $red
  text-align center
  font-size 18px
  line-height 1.3em

/******************************/
/*  CHAT ROOM                 */
/******************************/

.chat-room
  border-left 3px solid purple
  width 500px
  padding 10px

  &-list
    width 66%
    margin 10px

  &-list-title
    font-size 2em
    border-bottom 2px solid aqua

  &-list-item
    padding 10px

    font-size 1.6em
    color purple
    &:hover
      cursor pointer
      color ghostwhite
      button
        visibility visible
        float right
    span
      float left
    div
      clear both
    button
      visibility hidden

  &-header
    width 200px
    border-bottom 2px solid aqua

  &-title
    font-size 1.4em

  &-occupant-list
    height 0px

  &-message-box
    margin 15px
    width 440px
    height 300px
    
    overflow scroll
    border 1px solid purple
    border-radius 15px
    background-color hsla(0, 100%, 100%, 35%)
  
  &-message
    div
      padding 10px
    span
      color lightgray
      font-size 0.8em
    &-author
      padding-left 20px
    &-time, &-date
      padding-left 10px
      font-size 0.8em

  &-input-field
    margin 15px
    width 440px

  &-username
    display inline-block
    margin-bottom 10px
    width 200px
    font-size 1.2em
    
/******************************/
/*  USER ACCOUNTS             */
/******************************/

.user-accounts
  position relative
  margin auto
  width 400px
  
  padding 20px

/******************************/
/*  FORM                      */
/******************************/

.form-group
  display flex
  flex-direction column
  align-items center

.input-group
  width 100%
  position relative
  label
    color purple
    display block
    height 17px
  input
    display block
    border-radius 5px
    padding 5px
    margin-bottom 5px
    width 100%
  .error
    width 200%
    left 105%

.login
  margin 20px
  width 400px

.form-error, .error
  height 1.5em
  position absolute
  
  left 90%
  top 10%
  width 100%
  
  padding 5px
  border-radius 5px
  background-color red
  color white
  text-align center

/******************************/
/*  BUTTONS                   */
/******************************/

button[type="submit"]
  position relative
  width auto

  color $red
  outline 0
  font-size 12px
  text-transform uppercase

  border-radius 5px
  border 1px solid $red
  background white
  transition 0.2s
  &:hover
    color white
    background $red

button[disabled]
  background white
  color gray
  border 1px solid gray
  &:hover
    color gray
    background white

.modal-btn
  position relative
  z-index 0
  
  outline 0
  font-size 12px
  padding 10px
  text-transform uppercase

  color purple
  border-radius 5px
  border 1px solid purple
  background white
  transition 0.2s
  &:hover
    color white
    background purple

.close-btn
  display block
  position absolute
  
  border-radius 5px
  border 1px solid $red
  color $red
  outline 0
  background white
  width 2em
  top -20px
  left 198px
  transition 0.2s
  &:hover
    color white
    background $red